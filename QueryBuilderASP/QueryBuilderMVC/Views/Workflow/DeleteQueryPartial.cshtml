@model QueryBuilderMVC.Models.QueryViewModel


<h5>@Resources.Resource.DeleteQueryQuestion</h5>
<div>
	<p>@Resources.Resource.CreateQueryName @Html.DisplayFor(m => m.QueryName)</p>
	<p>@Resources.Resource.CreateQueryBody @Html.DisplayFor(m => m.QueryBody)</p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.QueryID, new { placeholder = Model.QueryID }) </p>
        <p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.UserID, new { placeholder = Model.UserID }) </p>
        <p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.ProjectID, new { placeholder = Model.ProjectID }) </p>
		<p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.QueryName, new { placeholder = Model.QueryName }) </p>
		<p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.QueryBody, new { placeholder = Model.QueryBody }) </p>
		<p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.QueryDate, new { placeholder = Model.QueryDate }) </p>

        @*<input type="submit" value="Delete" />*@
    }
</div>

