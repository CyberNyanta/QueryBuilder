@model QueryBuilderMVC.Models.ProjectViewModel

@using (Html.BeginForm("List", "Workflow", "Create new connection"))
{
    @*@Html.ValidationSummary();*@
    <p class="TextField">Name:     @Html.TextBoxFor(x => x.ConnectionDb.ConnectionName)</p>
    <p class="TextField">Server:   @Html.TextBoxFor(x => x.ConnectionDb.ServerName)</p>
    <p class="TextField">Login:    @Html.TextBoxFor(x => x.ConnectionDb.LoginDB)</p>
    <p class="TextField">Password: @Html.TextBoxFor(x => x.ConnectionDb.PasswordDB)</p>
    <p class="TextField">Database: @Html.TextBoxFor(x => x.ConnectionDb.DatabaseName)</p>
    <input type="hidden" value="@Model.idCurrentProject" name="idCurrentProject" />
    <p style="display:none">@Html.TextBox(@Model.idCurrentProject.ToString())   </p>
    <p><input type="submit" name="action" value="Create new connection" /></p>




}
