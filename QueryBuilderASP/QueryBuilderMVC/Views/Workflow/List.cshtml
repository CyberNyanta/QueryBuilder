                    var sort_left = $('.column').sortable('serialize', { key: 'id' });
                    document.cookie = "sort_right"+@Model.IdCurrentProject+"= " + sort_right;
                    document.cookie = "sort_left"+@Model.IdCurrentProject+"= " + sort_left;
                }

            });

        var x = get_cookie("sort_left"+@Model.IdCurrentProject);
        set_blocks(@Model.IdCurrentProject);

    });

    $(".SavePDF").click(function() {
        FillParameters();
    });

    $(".SaveExcel").click(function() {
        FillParameters();
    });

    function FillParameters() {
        var s = FormatQueryString();
        $(".sqlQueryForSaveToFile").val(s);
        $(".idCurrentProjectForSaveToFile").val(@Model.IdCurrentProject);
    }

    function FormatQueryString() {
        var query = $("#sql-code").val();

        var arr = query.split('From');
        query = '';
        for (var i = 0; i < arr.length; i++) {
            query += arr[i];
            if (i === 0) {
                query += ' From';
            }
        }

        return query;
    }

    function LoadGrid() {
        var s = FormatQueryString();

        $.ajax({
            type: "POST",
            url: '@Url.Action("GetGridModel")?query=' + s + '&idCurrentProject=' + @Model.IdCurrentProject,
            data: "",
            dataType: "json",
            success: function(result) {
                var modelList = [];
                for (var i = 0; i < result.length; i++) {
                    modelList.push({
                        name: result[i].Name,
                        index: result[i].Index,
                        sortable: result[i].Sortable,
                        align: result[i].Align
                    });
                }

                $("#jqg").jqGrid("GridUnload");

                $("#jqg").jqGrid({
                    jsonReader: {
                        cell: "",
                        id: "0"
                    },
                    url: '@Url.Action("GetData")?query=' + s + '&idCurrentProject=' + @Model.IdCurrentProject,
                    colModel: modelList,
                    datatype: 'json',
                    rowNum: 10,
                    rowList: [10, 20, 30, 50, 100],
                    pager: '#jpager',
                    loadonce: true,
                    autowidth: true,
                    scrollerbar: true,
                    gridComplete: function() {
                        var recs = parseInt($("#jqg").getGridParam("records"),10);
                        if (isNaN(recs) || recs === 0) {
                            $("#gridWrapper").hide();
                            $("#nodata_jqg").show();                           
                        }
                        else {
                            $('#gridWrapper').show();
                            $("#nodata_jqg").hide();
                        }
                    }
                });

                $("#jqg").jqGrid('navGrid', '#jpager', {
                    search: true,
                    searchtext: "Search",
                    refresh: false,
                    add: false,
                    del: false,
                    edit: false,
                    view: true,
                    viewtext: "View",
                    viewtitle: "Selected record"
                });
            },
            error: function(x, e)
            {
                alert(x.readyState + " "+ x.status +" "+ e.msg);
            }
        });
    };
</script>

