
@model QueryBuilderMVC.Models.ConnectionViewModel


<h5>Do you want delete this connection?</h5>
<div>
    <p>Name: @Html.DisplayFor(m => m.ConnectionName)</p>
    <p>DatabaseName: @Html.DisplayFor(m => m.DatabaseName)</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.ConnectionID, new { placeholder = Model.ConnectionID }) </p>
        <p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.ConnectionOwner, new { placeholder = Model.ConnectionOwner }) </p>
        <p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.ServerName, new { placeholder = Model.ServerName }) </p>
        <p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.DatabaseName, new { placeholder = Model.DatabaseName }) </p>
        <p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.LoginDB, new { placeholder = Model.LoginDB }) </p>
        <p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.PasswordDB, new { placeholder = Model.PasswordDB }) </p>
        <p class="TextField" style="display:none;">Name project: @Html.TextBoxFor(x => x.ConnectionName, new { placeholder = Model.ConnectionName }) </p>
